<resources>
    <declare-styleable name="TouchView">
        <attr name="src" format="reference"/>
        <attr name="frameColor" format="color"/>
        <attr name="frameWidth" format="dimension"/>
        <attr name="framePadding" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="TouchTextView" parent="TouchView">
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="text" format="string"/>
        <attr name="ttvOrientation">
            <flag name="horizontal" value="0"/>
            <flag name="vertical" value="1"/>
        </attr>
    </declare-styleable>
</resources>
